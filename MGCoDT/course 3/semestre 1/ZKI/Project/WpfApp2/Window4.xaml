<Window x:Class="WpfApp2.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800">
    <Grid Background="#FF444C5C">
        <Label Content="Шифрование методами Цеезаря, Трисемуса, Плейфера" HorizontalAlignment="Left" Margin="27,24,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FFE1B16A" FontStyle="Italic"/>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="28,96,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="243" Background="#FF78A5A3" Foreground="#FFCE5A57" FontSize="14" FontWeight="Bold" TextDecorations="{x:Null}"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,243,0,0" TextWrapping="Wrap" Text="Шифр" VerticalAlignment="Top" Foreground="#FFE1B16A" FontStyle="Italic" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="429,243,0,0" TextWrapping="Wrap" Text="Расшифровка" VerticalAlignment="Top" Foreground="#FFE1B16A" FontStyle="Italic" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Height="133" Margin="429,267,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="323" Background="#FF78A5A3" Foreground="#FFCE5A57" FontSize="14" FontWeight="Bold" TextDecorations="{x:Null}"/>
        <TextBox HorizontalAlignment="Left" Height="133" Margin="28,267,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="323" Background="#FF78A5A3" Foreground="#FFCE5A57" FontSize="14" FontWeight="Bold" TextDecorations="{x:Null}"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,67,0,0" TextWrapping="Wrap" Text="Введите сообщение" VerticalAlignment="Top" Foreground="#FFE1B16A" FontStyle="Italic" FontSize="14"/>
        <Label Content="Язык не определен" HorizontalAlignment="Left" Margin="27,129,0,0" VerticalAlignment="Top" Foreground="#FFF00000" FontWeight="Bold" FontStyle="Italic" Background="Transparent"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,160,0,0" TextWrapping="Wrap" Text="Укажите смещение" VerticalAlignment="Top" Foreground="#FFE1B16A" FontStyle="Italic" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Height="27" Margin="28,183,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="33" Background="#FF78A5A3" Foreground="#FFCE5A57" FontSize="16" FontWeight="Bold" TextDecorations="{x:Null}"/>
        <Button Content="v" HorizontalAlignment="Left" Margin="66,189,0,0" VerticalAlignment="Top" Width="12" Height="21"></Button>
        <Button Content="^" HorizontalAlignment="Left" Margin="66,183,0,0" VerticalAlignment="Top" Width="12" Height="14"></Button>
        <Button Content="Принять" HorizontalAlignment="Left" Margin="209,183,0,0" VerticalAlignment="Top" Width="62" Height="27" Foreground="#FF33A1D4" Background="#FFCE5A57" FontSize="14"/>
        <ComboBox HorizontalAlignment="Left" Margin="300,96,0,0" VerticalAlignment="Top" Width="201" Height="28" Background="Black" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Ширф Цезаря" Background="#FFF1A6A6"/>
            <ComboBoxItem Content="Шифр Трисемуса" Background="#FFCF6666"/>
            <ComboBoxItem Content="Шифр Плейфера" Background="#FF993838"/>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="300,67,0,0" TextWrapping="Wrap" Text="Выберите метод шифрования" VerticalAlignment="Top" Foreground="#FFE1B16A" FontStyle="Italic" FontSize="14"/>

    </Grid>
</Window>
